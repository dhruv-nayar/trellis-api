# TRELLIS API Configuration
# Copy this file to .env and update values

# =============================================================================
# API SETTINGS
# =============================================================================

# Comma-separated list of valid API keys
API_KEYS=your-api-key-1,your-api-key-2

# Enable debug mode (more verbose errors)
DEBUG=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# TRELLIS CONFIGURATION
# =============================================================================

# Backend to use: "huggingface" (V1) or "runpod" (V2)
TRELLIS_BACKEND=huggingface

# HuggingFace Space ID (for V1)
HUGGINGFACE_SPACE=JeffreyXiang/TRELLIS

# RunPod Configuration (for V2 - optional)
RUNPOD_ENDPOINT=
RUNPOD_API_KEY=

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Directories for file storage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs

# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Maximum files per request
MAX_FILES_PER_REQUEST=10

# Hours before automatic cleanup
CLEANUP_AFTER_HOURS=24

# =============================================================================
# RATE LIMITING
# =============================================================================

RATE_LIMIT_DEFAULT=60/minute
RATE_LIMIT_REMBG=30/minute
RATE_LIMIT_TRELLIS=10/minute

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Comma-separated list of allowed origins, or "*" for all
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# TASK TIMEOUTS (seconds)
# =============================================================================

REMBG_TASK_TIMEOUT=300
TRELLIS_TASK_TIMEOUT=600
REMBG_MAX_RETRIES=3
TRELLIS_MAX_RETRIES=2
